.container {
  width: 100vw;
  height: 80vh;
  padding: 20rpx;
  box-sizing: border-box;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  background-color: #f2f2f2;
}

.page-body {
  flex: 1;
  width: 100%;
  height: 80%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: flex-start;
}

.page-section-title {
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 20rpx;
}

.weui-cells {
  width: 100%;
  background-color: #fff;
  padding: 20rpx;
  box-sizing: border-box;
  border-radius: 10rpx;
  box-shadow: 0 2rpx 5rpx rgba(0, 0, 0, 0.1);
}

.checkbox {
  display: flex;
  width: 300px;
  align-items: center;
  padding: 20rpx;
  font-size: 28rpx;
  border-bottom: 1rpx solid #eee;
  margin-bottom: 10rpx; /* 调整标签之间的垂直间距 */
}

.checkbox:last-child {
  border-bottom: none;
  margin-bottom: 0; /* 最后一个标签的底部边框和间距设为 0 */
}
.checkbox .weui-cell__hd {
  margin-right: 10rpx;
}

.checkbox .weui-cell__bd {
  flex: 1;
}

.weui-input {
  width: 100%;
  border: none;
  border-radius: 5rpx;
  padding: 10rpx;
  font-size: 28rpx;
  background-color: #f5f5f5;
}

button {
  width: 100%;
  height: 80rpx;
  margin-top: 20rpx;
  border: none;
  border-radius: 10rpx;
  font-size: 32rpx;
  background-color: #4caf50;
  color: #fff;
}

.weui-cell_input {
  margin-bottom: 30rpx; /* 调整自定义标签的底部间距 */
}

