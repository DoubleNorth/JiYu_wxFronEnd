.filter-container {
  display: flex;
  justify-content: center;
  margin-bottom: 10px;
}

.filter-item {
  padding: 8px 16px;
  border-radius: 20px;
  background-color: #eaeaea;
  color: #333;
  cursor: pointer;
  margin: 0 10px; /* 添加左右间距 */
}

.filter-item.active {
  background-color: rgb(86, 68, 189);
  color: #fff;
}

