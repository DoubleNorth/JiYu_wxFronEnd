.activity-list {
  margin-top: 20rpx;
}

.activity-item {
  background-color: #fff;
  padding: 20rpx;
  margin-bottom: 20rpx;
  border-radius: 10rpx;
  box-shadow: 0 2rpx 6rpx rgba(0, 0, 0, 0.1);
}

.activity-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.activity-name {
  font-size: 32rpx;
  font-weight: bold;
}

.activity-tag {
  font-size: 24rpx;
  color: #fff;
  padding: 4rpx 8rpx;
  border-radius: 4rpx;
}

.public {
  background-color: #42b983;
}

.private {
  background-color: #fdd300;
}

.encrypted {
  background-color: #ff6b6b;
}

.activity-content {
  margin-top: 16rpx;
}

.activity-description {
  font-size: 28rpx;
  color: #333;
  line-height: 40rpx;
}

.activity-dates {
  margin-top: 16rpx;
  display: flex;
  flex-direction: column;
}

.activity-created,
.activity-expire {
  font-size: 24rpx;
  color: #666;
}

.join-button {
  margin-top: 20rpx;
  width: 100%;
  height: 60rpx;
  font-size: 28rpx;
  color: #fff;
  background-color: #007aff;
  border-radius: 10rpx;
  border: none;
  outline: none;
}

/* 搜索框 */

.search-container {
  display: flex;
  align-items: center;
  justify-content: space-between;
  background-color: #f5f5f5;
  border-radius: 20rpx;
  padding: 10rpx;
  box-shadow: 0 2rpx 6rpx rgba(0, 0, 0, 0.1);
}

.search-input {
  flex: 1;
  height: 60rpx;
  border: none;
  background-color: transparent;
  font-size: 28rpx;
  padding: 0 20rpx;
}

.search-icon {
  width: 40rpx;
  height: 40rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-left: 10rpx;
}

.search-icon image {
  width: 100%;
  height: 100%;
}

