/* activity-detail.wxss */

.container {
  padding: 20px;
}

.header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 20px;
}

.title {
  font-size: 20px;
  font-weight: bold;
}

.tag {
  display: inline-block;
  padding: 4px 8px;
  border-radius: 4px;
  color: #fff;
  font-size: 12px;
}

.public {
  background-color: #42b983;
}

.private {
  background-color: #fdd300;
}

.encrypted {
  background-color: #ff6b6b;
}

.content {
  margin-bottom: 20px;
}

.info-row {
  display: flex;
  margin-bottom: 10px;
}

.info-label {
  width: 80px;
}

.user-list {
  margin-bottom: 20px;
}

.user-list-header {
  font-weight: bold;
  margin-bottom: 10px;
}

.user-list-item {
  margin-bottom: 5px;
}

.join-button {
  width: 100%;
  padding: 10px;
  background-color: rgb(93, 93, 209);
  color: #fff;
  font-size: 16px;
  border-radius: 4px;
}

.quit-button {
  width: 100%;
  padding: 10px;
  background-color: rgb(199, 91, 91);
  color: #fff;
  font-size: 16px;
  border-radius: 4px;
}

