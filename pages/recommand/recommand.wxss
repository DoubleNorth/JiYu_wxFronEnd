/* 推荐好友列表样式 */
.friend-list {
  display: flex;
  flex-direction: column;
  margin-top: 20rpx;
}

.friend-item {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 20rpx;
  margin-bottom: 20rpx;
  background-color: #fff;
  box-shadow: 0 2rpx 6rpx rgba(0, 0, 0, 0.1);
  border-radius: 20rpx;
}

.avatar {
  width: 120rpx;
  height: 120rpx;
  border-radius: 10rpx;
  margin-right: 20rpx;
}

.friend-info {
  flex: 1;
}

.friend-name {
  font-size: 36rpx;
  font-weight: bold;
  margin-bottom: 10rpx;
}

.tag-list {
  display: flex;
  flex-wrap: wrap;
}

.tag {
  display: inline-block;
  font-size: 14px;
  color: #fff;
  background-color: #28778fa2;
  border-radius: 8px;
  padding: 2px 6px;
  margin-right: 4px;
}


.add {
  flex-shrink: 0;
  width: 60rpx;
  height: 60rpx;
  margin-left: auto;
}

.container {
  display: flex;
  justify-content: center;
  align-items: center;
  height: 50vh; /* 设置高度占据屏幕的一半 */
}

.title {
  font-size: 18px;
  font-weight: bold;
}
