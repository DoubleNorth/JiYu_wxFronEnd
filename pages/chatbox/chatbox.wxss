#messagecontainer {
  height: 100%;
  display: flex;
  flex-direction: column;
  justify-content: flex-end;
  align-items: flex-start;
  padding: 20rpx;
}


.message-item {
  display: flex;
  flex-direction: column;
  margin-bottom: 20rpx;
  max-width: 70%;
  border-radius: 20rpx;
  padding: 20rpx;
  font-size: 28rpx;
}

.mine {
  align-self: flex-end;
  background-color: #e5f8ff;
}

.other {
  align-self: flex-start;
  background-color: #d9f7be;
}

.message-time {
  align-self: flex-end;
  margin-top: 10rpx;
  font-size: 24rpx;
  color: #999;
}


/* 发送栏 */
/* start.wxss */
.input-container {
  display: flex;
  flex-direction: row;
  align-items: center;
  padding: 20rpx;
  background-color: #fff;
  position: fixed;
  bottom: 0;
  width: 100%;
  height: 40px;
}

.input-box {
  flex: 1;
  border: none;
  border-radius: 50rpx;
  padding: 20rpx;
  font-size: 28rpx;
  background-color: #f5f5f5;
  line-height: 36rpx;
  resize: none;
  height: 36rpx; /* 设置初始高度为3行，每行36rpx */
}

.send-btn {
  margin-left: 10rpx;
  border: none;
  border-radius: 30rpx;
  padding: 16rpx;
  font-size: 24rpx;
  background-color: #4caf50;
  color: #fff;
}

/* 头部  */
.header {
  padding: 16px ;
  font-size: 18px;
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 10px;
  background-color: #f2f2f2;
  height: 60px;
  top: 0;
  position: fixed;
  width: 95%;
}

.avatar {
  width: 60px;
  height: 60px;
  border-radius: 10rpx;
}

.friend {
  margin-right: 10px;
}

.mine {
  margin-left: 10px;
}

.friend-info {
  flex: 1;
  text-align: center;
}


.bottom-space {
  height: 40px;
}

.top-space {
  height: 80px;
}


